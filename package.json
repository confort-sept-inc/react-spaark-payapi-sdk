{
  "name": "spaark-payapi-sdk",
  "version": "1.3.0",
  "description": "TypeScript SDK for Pawapay Mobile Money API (V2) - Deposits, Payouts, Refunds for Africa",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "version": "standard-version",
    "version:patch": "standard-version --release-as patch",
    "version:minor": "standard-version --release-as minor",
    "version:major": "standard-version --release-as major",
    "push": "pnpm typecheck && pnpm test && pnpm build && standard-version && git push --follow-tags",
    "release": "pnpm push && npm publish",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.0",
    "axios": "^1.6.0",
    "lucide-react": ">=0.400.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "@radix-ui/react-tabs": {
      "optional": true
    },
    "@radix-ui/react-select": {
      "optional": true
    },
    "@radix-ui/react-dialog": {
      "optional": true
    },
    "lucide-react": {
      "optional": true
    }
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/uuid": "^9.0.0",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "lucide-react": "^0.469.0",
    "react": "^18.0.0",
    "standard-version": "^9.5.0",
    "tailwind-merge": "^3.4.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "pawapay",
    "mobile-money",
    "momo",
    "mtn",
    "orange-money",
    "airtel",
    "payments",
    "africa",
    "cameroon",
    "congo",
    "gabon",
    "cemac",
    "xaf",
    "sdk",
    "typescript",
    "fintech",
    "spaark"
  ],
  "author": "Spaark <contact@spaark.cloud>",
  "license": "MIT",
  "homepage": "https://github.com/confort-sept-inc/react-spaark-payapi-sdk#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/confort-sept-inc/react-spaark-payapi-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/confort-sept-inc/react-spaark-payapi-sdk/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
